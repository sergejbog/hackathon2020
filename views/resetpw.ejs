<div id="newpw_popup">
    <div class="register_div">
        <span id="closeNewpw">X</span>
        <p class="sign-up">Change Password!</p>
        <form action="/" method="POST">


            <label for="us" class="input_label">Username:</label>
            <p class="register-error hidden">Username doesn't exists</p> 
            <input type="text" name="us" required> 
            

            <div class="register_two">
                <div class="register_two-row">
                    <label for="newpw1" class="input_label">New Password:</label>
                    <input type="password" name="newpw1" required>
                </div>
                
                <div class="register_two-row">
                    <label for="newpw2" class="input_label">Confirm Password:</label>
                    <input type="password" name="newpw2" required>
                </div>
            </div>

            <button class="register-button" type="submit">Change Password</button>

        </form>
    </div>
</div> 